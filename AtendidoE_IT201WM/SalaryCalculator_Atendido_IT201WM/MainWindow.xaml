<Window x:Class="SalaryCalculator_Atendido_IT201WM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryCalculator_Atendido_IT201WM"
        mc:Ignorable="d"
        Title="Salary Calculator" Height="450" Width="800">

    <Grid RenderTransformOrigin="0.506,0.403"
          Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}">

        <Label x:Name="lblTitle"
               Content="Salary Calculator"
               HorizontalAlignment="Left"
               Height="46"
               Margin="270,63,0,0"
               VerticalAlignment="Top"
               Width="232"
               FontSize="30"
               FontFamily="Cambria Math"/>

        <Label x:Name="lblHours"
               Content="Hours Worked:"
               HorizontalAlignment="Left"
               Height="24"
               Margin="339,114,0,0"
               VerticalAlignment="Top"
               Width="96"
               FontFamily="Cambria Math"/>

        <Label x:Name="lblRate"
               Content="Hour Rate:"
               HorizontalAlignment="Center"
               Height="30"
               Margin="0,179,0,0"
               VerticalAlignment="Top"
               Width="96"
               FontFamily="Cambria Math"/>

        <Label x:Name="lblSalary"
               Content="Gross Salary:"
               HorizontalAlignment="Left"
               Height="30"
               Margin="339,244,0,0"
               VerticalAlignment="Top"
               Width="96"
               FontFamily="Cambria Math"/>

        <Button x:Name="btnCompute"
                Content="Compute"
                HorizontalAlignment="Left"
                Height="33"
                Margin="159,323,0,0"
                VerticalAlignment="Top"
                Width="72"
                Click="btnCompute_Click"/>

        <Button x:Name="btnClear"
                Content="Clear"
                HorizontalAlignment="Left"
                Height="33"
                Margin="338,323,0,0"
                VerticalAlignment="Top"
                Width="85"
                Click="btnClear_Click"/>

        <Button x:Name="btnExit"
                Content="Exit"
                HorizontalAlignment="Left"
                Margin="529,323,0,0"
                VerticalAlignment="Top"
                Height="33"
                Width="78"
                Click="btnExit_Click"/>

        <TextBox x:Name="txtSalary"
                 HorizontalAlignment="Left"
                 Margin="328,279,0,0"
                 VerticalAlignment="Top"
                 Width="120"
                 Height="30"
                 IsReadOnly="True"/>

        <TextBox x:Name="txtRate"
                 HorizontalAlignment="Left"
                 Margin="327,209,0,0"
                 VerticalAlignment="Top"
                 Width="120"
                 Height="30"/>

        <TextBox x:Name="txtHours"
                 HorizontalAlignment="Left"
                 Margin="327,143,0,0"
                 VerticalAlignment="Top"
                 Width="120"
                 Height="30"/>

    </Grid>
</Window>
